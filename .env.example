# GitHub Auto-Coder Configuration
# Copy this file to .env and fill in your values

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Your GitHub Username
GITHUB_USERNAME=your_username_here

# Optional: Default repository settings
DEFAULT_PRIVATE=false
DEFAULT_AUTO_INIT=true

# Optional: AI/LLM Configuration (for advanced code generation)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Web Interface Settings
FLASK_PORT=5000
FLASK_DEBUG=false
FLASK_SECRET_KEY=change_this_to_random_secret_key

# Optional: Logging
LOG_LEVEL=INFO
LOG_FILE=auto_coder.log
